generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Appointment {
  id              Int      @id @default(autoincrement())
  appointmentTime DateTime
  name            String
  phone           String
  email           String
  notes           String?
  status          Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("appointments")
}
